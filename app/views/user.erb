<header>
<div class="row">
  <span id="welcome">Welcome, <%= @user.full_name %></span>
  <%= erb :logout_btn %>
  <div class="clear"></div>
</div>
</header>

<main>
  <section id="new_tweet_form">
    <form action="/tweet/<%= @user.id %>" method="post">
      <input type="text" min="1" max="140" name="tweet_content" required>
      <input type="submit" value="Tweet!">
    </form>
  </section>

  <% if @tweets %>
  <section id="tweets_display">
      <% @tweets.each do |tweet| %>
      <div class="row">
        <%= tweet.content %>
      </div>
      <% end %>
  </section>
  <% end %>


</main>

