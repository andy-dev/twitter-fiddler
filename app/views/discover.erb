<div class="container">
<h2>Discover</h2>


<% @tweets.each do |tweet| %>
<span><%= tweet.user.user_name %></span>
<span>tweets : <%= tweet.content %></span>
<p><%=tweet.created_at.to_s[5..9] %></p>

  <% if following?(tweet) %>
  <p><%= tweet.user.id %></p>
  <form action='/discover/<%= @user.id %>/follow/<%= tweet.user.id %>' method='post'>
    <input type='submit' value='Follow <%= tweet.user.user_name %>'>
  </form>
  <% else %>
    <form >
    <input value='Already Following! <%= tweet.user.user_name %>'>
  </form>
  <% end %>
<% end %>

<div class="Following">
  <h1>You are following this people</h1>
  <% @user.followings.each do |follow| %>
  <p><%= follow.user_name %></p>
  <% end %>

	<div class="row">
		<%= erb :logout_btn %>
	</div>
<div class="col-md-8 col-md-offset-3">
	<div class="row">
  		<section id="tweets_section">
			<% @tweets.each do |tweet| %>
				<div class="row tweets_display">
				<span class="pure_bg"><%= tweet.user.user_name.capitalize %></span>
				<span class="pure_bg">tweets : <%= tweet.content %></span>
				<span class="pure_bg" ><%=tweet.created_at.to_s[5..9] %></span>
				 <form action='/discover/<%= @user.id %>/follow/<%= tweet.user.id %>' method='post'>
    				<input class="btn btn-primary pull-right follow_btn" type='submit' value='Follow <%= tweet.user.user_name.capitalize %>'>
  				</form>
				</div>
  </section>
  </div>
<% end %>
</div>
</div>